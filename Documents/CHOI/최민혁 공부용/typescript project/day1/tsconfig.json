        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "module": "ES6",
        "lib": ["ES2015", "DOM.Iterable", "DOM"],
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": false,
        "noImplicitAny": true,
        "removeComments": true,
        "target": "ES5"
    }
